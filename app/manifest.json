{
    "manifest_version": 2,

    "name": "Twitch for Chrome",
    "short_name": "TwitCh",
    "description": "Easy way to follow Twitch Channels",
    "version": "1.3.1",

    "permissions": [
        "https://api.twitch.tv/",
        "alarms",
        "notifications",
        "storage"
    ],

    "icons": { "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png" },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    }
}